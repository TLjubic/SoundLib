@model List<Model.Album>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
</head>


<div class="section-wrapper">
    <!--
    <div class="nav-categories">
        <nav>
            <ul>
                <li><a href="#">Rock</a></li>
                <li><a href="#">Pop</a></li>
                <li><a href="#">Jazz</a></li>
                <li><a href="#">Blues</a></li>
                <li><a href="#">Country</a></li>
                <li><a href="#">R&B</a></li>
            </ul>
        </nav>
    </div>
    -->

    <div class="search-link">
        <div class="add-btn"><a asp-controller="Album" asp-action="Search" asp-route-id="Rock">Rock</a></div>
        <div class="add-btn"><a asp-controller="Album" asp-action="Search" asp-route-id="Pop">Pop</a></div>
        <div class="add-btn"><a asp-controller="Album" asp-action="Search" asp-route-id="Jazz">Jazz</a></div>
        <div class="add-btn"><a asp-controller="Album" asp-action="Search" asp-route-id="Country">Country</a></div>
        <div class="add-btn"><a asp-controller="Album" asp-action="Search" asp-route-id="Blues">Blues</a></div>
        <div class="add-btn"><a asp-controller="Album" asp-action="Search" asp-route-id="R&B">R&B</a></div>
    </div>



    <div class="section-content section-album">


        <div class="add-btn">
            <a asp-controller="Album" asp-action="CreateAlbum">Add new album</a>
        </div>

        @foreach (var item in Model)
        {

            <a asp-controller="Album" asp-action="Details" asp-route-id="@item.Id">
                <div class="photobox photobox_type1">
                    <div class="photobox__previewbox">
                        <img src="@item.ImageUrl" class="photobox__preview" alt="Preview">
                        <span class="photobox__label">
                            <p>@item.Title</p>
                            <p class="artist-name">@item.Artist.FullName</p>
                        </span>

                    </div>
                </div>
            </a>
        }
    </div>

</div>


<div class="clear">
</div>